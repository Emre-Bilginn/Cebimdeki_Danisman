<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DDDDDD"
    android:onClick="backToMain"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MemberSignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/msu_relativeLayout"
                android:layout_width="395dp"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:context=".MainActivity">

                <Button
                    android:id="@+id/msu_backButton"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#9ADE7B"
                    android:drawableStart="@drawable/back"
                    android:drawablePadding="0dp"
                    android:onClick="back"
                    android:text="Geri Dön"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/msu_relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="990dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                <TextView
                    android:id="@+id/msu_textView"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="19dp"
                    android:text="Üye Ol"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/msu_textView2"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="95dp"
                    android:text="Kullanıcı Adı"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/msu_textView3"
                    android:layout_width="171dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="187dp"
                    android:text="Adınız Soyadınız"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/msu_editTextText"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="129dp"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Kullanıcı Adınızı Giriniz"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/msu_editTextText2"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="229dp"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Adınız Soyadınızı Giriniz"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/msu_textView4"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="289dp"
                    android:text="E-posta Adresiniz"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/msu_editTextText3"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="332dp"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/border_edittext"
                    android:hint="E-posta Adrsinizi Giriniz"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/msu_textView5"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="396dp"
                    android:text="Telefon Numaranız"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/msu_editTextText4"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="439dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Telefon Numaranızı Giriniz"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/msu_textView6"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="503dp"
                    android:text="Şehir"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/msu_spinner"
                    android:layout_width="324dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="413dp"
                    android:background="@drawable/border_edittext" />

                <TextView
                    android:id="@+id/msu_textView7"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="603dp"
                    android:text="Şifreniz"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/msu_editTextText5"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="640dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Şifrenizi Giriniz"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/msu_textView8"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="697dp"
                    android:text="Şifrenizin Tekrarı"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/msu_editTextText6"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="734dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Şifrenizi Tekrar Giriniz"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent" />

                <CheckBox
                    android:id="@+id/msu_checkBox"
                    android:layout_width="324dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="156dp"
                    android:text="Üyelik Sözleşmesini Kabul Ediyorum" />

                <Button
                    android:id="@+id/msu_button"
                    android:layout_width="323dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="76dp"
                    android:background="#9ADE7B"
                    android:onClick="backToMemberLogin"
                    android:text="Kayıt Olun"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>